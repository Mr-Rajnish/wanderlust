<% layout("/layouts/boilerplate.ejs")%>

<!-- Hero Section (Optional) -->
<div class="hero-section position-relative m-3">
    <div class="overlay">
        <div class="container d-flex align-items-center justify-content-center vh-70">
            
        </div>
    </div>
</div>

<div class="row w-100 position-absolute custom3 " style="top:5rem">
    <h1 class="col-12 text-center text-white mb-4 form-heading">Airbnb Sign Up</h1>
    <div class="col-12 col-md-6 offset-md-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-4">
               
                <input type="text" name="username" id="username" class="form-control" required placeholder="Username">
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-4">
                
                <input type="email" name="email" id="email" class="form-control" required placeholder="Email">
            </div>

            <div class="mb-4">
                
                <input type="password" name="password" id="password" class="form-control" required placeholder="Password">
            </div>

            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>



<!-- Custom Styles -->
<style>
    /* Hero section styling */
    .hero-section {
        position: relative;
        background-image: url('https://images.pexels.com/photos/730218/pexels-photo-730218.jpeg?auto=compress&cs=tinysrgb&w=600');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        height: 70vh;
        filter: blur(3px);
    }

    .hero-section .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        
    }

    /* Form container styling */
    .form-container {
        position: relative;
        z-index: 2;
    }

    /* Form elements styling */
    .form-control {
        border-radius: 0.5rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #28a745; /* Green border when focused */
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-size: 1.1rem;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .valid-feedback {
        font-size: 0.9rem;
        color: #28a745;
    }

    /* Center form on the page */
    .container {
        position: relative;
        z-index: 2;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .col-md-6 {
            width: 100% !important;
        }
        .custom3{
width: 80% !important;
top: 8.5rem !important;
left: 3rem !important;
        }
        .hero-section{
        width: 100%;
        margin: 0 !important;
        }
        .form-heading{
            color: black !important
            ;
        }
    }
</style>

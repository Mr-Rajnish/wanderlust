            info.style.display="inline";
            
            }
            else{
               info.style.display="none";
               console.log("clicked")
            }
         }
    })


</script>

<script>
   document.addEventListener("DOMContentLoaded", function() {
       const searchInput = document.querySelector('.search-input');
       const searchForm = document.querySelector('form');
       const searchButton = document.querySelector('.btn-search');
       const listingsContainer = document.querySelector('.row'); // The container to render listings

       // Function to fetch and update listings based on search query
       const searchListings = (query) => {
           fetch(`/listings/search?title=${query}`)
               .then(response => response.json())
               .then(data => {
                   // Clear current listings
                   listingsContainer.innerHTML = '';

                   // Dynamically render new listings based on search results
                   data.listings.forEach(listing => {
                       const listingElement = document.createElement('a');
                       listingElement.href = `/listings/${listing._id}`;
                       listingElement.style.textDecoration = 'none';

                       listingElement.innerHTML = `
                           <div class="card col listing-card">
                               <img src="${listing.image.url}" class="card-img-top" alt="listings_image" style="height:20rem">
                               <div class="card-body">
                                   <p class="card-text">
                                       <b>${listing.title}</b>
                                       <br>₹${listing.price ? listing.price.toLocaleString("en-IN") : 'N/A'}/night
                                   </p>
                               </div>
                           </div>
                       `;
                       
                       listingsContainer.appendChild(listingElement);
                   });
               })
               .catch(error => console.error('Error fetching listings:', error));
       };

       // Event listener for submitting the form (via Enter key or search button click)
       searchForm.addEventListener('submit', function(e) {
           e.preventDefault(); // Prevent the form from submitting (page reload)
           const query = searchInput.value;
           searchListings(query);
       });

       // Optional: Handle pressing "Enter" directly in the search input
       searchInput.addEventListener('keypress', function(e) {
           if (e.key === "Enter") {
               searchForm.dispatchEvent(new Event('submit'));
           } else {
               const query = searchInput.value;
               searchListings(query);
           }
       });

       // Optional: Handle clicking the Search button
       searchButton.addEventListener('click', function() {
           searchForm.dispatchEvent(new Event('submit'));
       });
   });
</script>
